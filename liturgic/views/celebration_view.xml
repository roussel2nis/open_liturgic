<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<record id="view_calendar_event_type_celebration_tree" model="ir.ui.view">
        <field name="name">Meeting Types Tree</field>
        <field name="model">calendar.event.type</field>
        <field name="arch" type="xml">
            <tree string="Meeting Types" editable="bottom">
                <field name="name"/>
                <field name="is_liturgic"/>
            </tree>
        </field>
    </record>    

    <record id="action_calendar_event_type_celebration" model="ir.actions.act_window">
        <field name="name">Meeting Types</field>
        <field name="res_model">calendar.event.type</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_calendar_event_type_celebration_tree"/>
    </record>
    
    <record id="view_celebration_search" model="ir.ui.view">
        <field name="name">CRM - Meetings Search</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
        <field name="arch" type="xml">
            <field name="partner_ids" position="after">
            	<field name="celebrant_id"/>
            </field>
            <xpath expr="//search/group" position="inside">
            	<filter string="Celebrant" domain="[]" context="{'group_by': 'celebrant_id'}"/>
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_calendar_event_celebration_tree">
        <field name="name">Celebrations</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
        	<field name="partner_ids" position="after">
        		<field name="celebrant_id" invisible="not context.get('liturgic', False)"/>
        	</field>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_celebration_form">
        <field name="name">Calendar - Event Form</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='partner_ids']/.." position="after">
        		<field name="celebrant_id"/>
        	</xpath>
        	<field name="categ_ids" position="attributes">
        		<attribute name="domain">[('is_liturgic', '=', True)]</attribute>
        	</field>
        </field>
    </record>

    <record id="action_celebration" model="ir.actions.act_window">
        <field name="name">Celebrations</field>
        <field name="res_model">calendar.event</field>
        <field name="view_mode">calendar,form,tree</field>
        <field name="view_id" ref="calendar.view_calendar_event_calendar"/>
        <field name="search_view_id" ref="view_celebration_search"/>
        <field name="domain">[('categ_ids.is_liturgic', '=', True)]</field>
        <field name="context">{'liturgic':True}</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to schedule a new celebration.
          </p><p>
            The calendar is shared between employees and fully integrated with
            other applications such as the employee holidays or the business
            opportunities.
          </p>
        </field>
    </record>
    
    <menuitem name="Liturgic" id="menu_liturgic" sequence="2" web_icon="calendar,static/description/icon.png" groups="liturgic.group_liturgic_user"/>
    <menuitem id="menu_liturgic_celbrations" name="Celebrations" parent="menu_liturgic" groups="liturgic.group_liturgic_user"/>
    <menuitem id="menu_celebrations_celebrations" name="Celebrations" action="action_celebration" parent="menu_liturgic_celbrations" groups="liturgic.group_liturgic_user"/>
    <menuitem id="menu_liturgic_configuration" name="Configuration" parent="menu_liturgic" groups="liturgic.group_liturgic_user" sequence="20"/>
    <menuitem id="menu_celebrations_event_type" name="Event Types" action="action_calendar_event_type_celebration" parent="menu_liturgic_configuration" groups="liturgic.group_liturgic_manager"/>
                       
 </data>
</openerp>